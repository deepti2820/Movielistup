<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movie Library</title>
    <script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/movies.css">

</head>

<body style="background-color: black;">
  <%if(moviesSearch===undefined){%>
      <h3 style="color: white; text-align: center; padding: 30% 25%;">Opps!!! No movie found.</h3>
  
  <%}else if(moviesSearch.length>0){%>
     <div class="flex-container">
      <% for(let movie of moviesSearch){%>
        <div class="col-lg-4 mb-3 flex-wrap">
          <div class="card text-center shadow-lg mx-auto" style="width: 18rem;">
            <img src="<%= movie.Poster%>" class="card-img-top" alt="...">
              <h5 class="card-title"><%=movie.Title%></h5>
              <h5 class="card-title"><%= movie.Year%></h5>
              <a href="/<%=movie.Title%>/<%=movie.imdbID%>/details">View more details ></a>
               <form action="/movie/<%=movie.imdbID%>"  method="POST">
                <button class="btn play-btn">Add to playlist </button>
              </form>

            </div>
          </div>
    <%} } %>
     </div>
    
    <script src="https://kit.fontawesome.com/cf8ffcf7af.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>
</body>
</html>

